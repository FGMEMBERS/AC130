<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>comp.ac</path>

<animation>
 <type>range</type>
 <min-m>0</min-m>
 <max-m>30</max-m>
</animation>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>ring</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ring</object-name>
    <emission>
      <red>   0.8 </red>
      <green> 0.7 </green>
      <blue>  0.5 </blue>
      <factor-prop>/controls/lighting/instruments-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ring</object-name>
    <property>/instrumentation/magnetic-compass/indicated-heading-deg</property>
    <center>
      <x-m> -0.007 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.390 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>
