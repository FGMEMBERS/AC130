<?xml version="1.0"?>
<PropertyList>

<particlesystem>
  <name>flare</name>
  
  <texture>flare.png</texture>
  <emissive>true</emissive>
  <lighting>false</lighting>
       
  <offsets>
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0.5</z-m>
  </offsets>
           
  <attach>local</attach>
           
  <placer>
    <type>point</type>
  </placer>
           
  <shooter>
    <speed-mps>
    	<value>0.7</value>
	<spread>0.1</spread>
    </speed-mps>
  </shooter>
       
  <counter>
    <particles-per-sec>
      <value>8</value>
      <spread>.3</spread>
    </particles-per-sec>
  </counter>
           
  <align>billboard</align>
           
  <particle>

  <start>
    <color>
      <red><value>1</value></red>
      <green><value>1</value></green>
      <blue><value>1</value></blue>
      <alpha><value>1</value></alpha>
    </color>
    <size>
      <value>2</value>
    </size>
  </start>

  <end>
    <color>
      <red><value>0.5</value></red>
      <green><value>0.5</value></green>
      <blue><value>0.5</value></blue>
      <alpha><value>0.0</value></alpha>
    </color>
    <size>
      <value>2.2</value>
      <spread>1</spread>
    </size>
  </end>
    
  <life-sec>
    <value>.5</value>
  </life-sec>

  <mass-kg>610</mass-kg>
  <radius-m>1</radius-m>
  </particle>
           
  <program>
    <fluid>air</fluid>
    <gravity>true</gravity>
    <wind>true</wind>
  </program>
           
</particlesystem>

  <model>
		<path>Aircraft/AC130/Models/ac130/flares/smoke.xml</path>
		<name>smoke</name>
		<offsets>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</offsets>
	</model>


</PropertyList>